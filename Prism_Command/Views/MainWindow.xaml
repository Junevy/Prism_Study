<Window
    x:Class="Prism_Command.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    Title="{Binding Title}"
    Width="525"
    Height="350"
    prism:ViewModelLocator.AutoWireViewModel="True">
    <StackPanel>
        <TextBox
            Width="120"
            Height="30"
            Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}" />
        <Button
            Width="120"
            Height="30"
            Command="{Binding ChangeMsgCommand}"
            Content="ChangeMsg" />

        <TextBox
            x:Name="UserId"
            Width="120"
            Height="30"
            Margin="0,20,0,0"
            Text="{Binding UserId, UpdateSourceTrigger=PropertyChanged}" />
        <Button
            Width="120"
            Height="30"
            Command="{Binding SubmitUserIdCommand}"
            CommandParameter="{Binding ElementName=UserId, Path=Text}"
            Content="Submit" />

        <Button
            Width="120"
            Height="30"
            Margin="0,20"
            Command="{Binding GetDialogCommand}"
            Content="ComPosite" />
    </StackPanel>
</Window>
