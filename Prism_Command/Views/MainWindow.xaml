<Window x:Class="Prism_Command.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525" >
    <StackPanel>
        <TextBox Width="120" Height="30" Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Width="120" Height="30" Content="ChangeMsg" Command="{Binding ChangeMsgCommand}"/>

        <TextBox x:Name="UserId" Width="120" Height="30" Text="{Binding UserId, UpdateSourceTrigger=PropertyChanged}" Margin="0,20,0,0"/>
        <Button Width="120" Height="30" Content="Submit" 
                Command="{Binding SubmitUserIdCommand}" 
                CommandParameter="{Binding ElementName=UserId, Path=Text}"/>
    </StackPanel>
</Window>
