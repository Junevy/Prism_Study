<Window x:Class="Prism_Primary.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:vm="clr-namespace:Prism_Primary.ViewModels"
        Title="{Binding Title}" Height="350" Width="525" >
    <StackPanel>
        <Button Width="120" Height="30" Content="Change" Command="{Binding ChangeCommand}"/>

        <TextBlock Width="200" Height="30" Text="{Binding Message}"/>
        <Button Width="120" Height="30" Content="ChangeMsg" Command="{Binding ChangeMsgCommand}" CommandParameter="Hello the Prism!"/>

        <TextBox Width="200" Height="30" Text="{Binding Info.Name}"/>
        <TextBox Width="200" Height="30" Text="{Binding Info.Age}"/>
        <Button Width="120" Height="30" Content="GetInfo" Command="{Binding GetUserInfoCommand}" CommandParameter="{Binding Info}"/>


    </StackPanel>
</Window>
